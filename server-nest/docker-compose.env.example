# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=presentations_db
POSTGRES_PORT=5432

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-password-in-production
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001
MINIO_BUCKET_NAME=presentations

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d
API_PREFIX=api
# CORS_ORIGIN supports multiple origins separated by commas
# Frontend runs on port 3000 (Vite), also support Vite default port 5173
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
BCRYPT_ROUNDS=12

# Database URL (auto-configured for Docker Compose)
# DATABASE_URL will be automatically set based on POSTGRES_* variables

